                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cv_zakat_tabungan"
                android:foreground="@drawable/bg_transparent_view">

                <LinearLayout
